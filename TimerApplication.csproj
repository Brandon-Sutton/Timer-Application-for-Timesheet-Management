<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWindowsForms>true</UseWindowsForms>
		<ImplicitUsings>enable</ImplicitUsings>
		<ApplicationManifest>app.manifest</ApplicationManifest>

		<!-- Disable automatic DPI scaling by the framework -->
		<!-- We'll handle it manually for better control -->
		<ApplicationHighDpiMode>PerMonitorV2</ApplicationHighDpiMode>

		<!-- Ensure the application is DPI aware -->
		<EnableWindowsFormsHighDpiAutoResizing>false</EnableWindowsFormsHighDpiAutoResizing>
	</PropertyGroup>

</Project>